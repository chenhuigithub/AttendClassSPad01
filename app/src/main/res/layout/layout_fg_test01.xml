<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_all_layout_fg_test_choice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimen_padding_002">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_wrapper_see_answer_analysis_layout_fg_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="正确答案："
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_see_analysis_layout_fg_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:padding="@dimen/dimen_padding_005"
                    android:text="查看解析"
                    android:textColor="#027DD3"
                    android:textSize="@dimen/dimen_text_008" />
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rl_wrapper_histogram_layout_fg_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_padding_006"
                android:visibility="gone" />

            <!--柱状图-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:gravity="top"
                android:orientation="horizontal"
                android:visibility="visible">


                <LinearLayout
                    android:id="@+id/ll_options_layout_fg_test01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_content_layout_fg_test"
                    android:layout_marginTop="@dimen/dimen_padding_005"
                    android:clickable="false"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_padding_005">

                    <LinearLayout
                        android:id="@+id/ll_option_a_layout_fg_test01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/cbox_option_a_layout_fg_test01"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:background="@drawable/selector_for_cbox"
                            android:button="@null"
                            android:tag="cbox"></CheckBox>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_padding_005"
                            android:text="Ａ：单刀赴会"
                            android:textColor="@color/color_text_content"
                            android:textSize="@dimen/dimen_text_007"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_option_b_layout_fg_test01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_padding_005"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/cbox_option_b_layout_fg_test01"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:background="@drawable/selector_for_cbox"
                            android:button="@null"
                            android:tag="cbox"></CheckBox>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_padding_005"
                            android:text="Ｂ：水淹七军"
                            android:textColor="@color/color_text_content"
                            android:textSize="@dimen/dimen_text_007"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_option_c_layout_fg_test01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_padding_005"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/cbox_option_c_layout_fg_test01"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:background="@drawable/selector_for_cbox"
                            android:button="@null"
                            android:tag="cbox"></CheckBox>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_padding_005"
                            android:text="C：大意失荆州"
                            android:textColor="@color/color_text_content"
                            android:textSize="@dimen/dimen_text_007"></TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_option_d_layout_fg_test01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_padding_005"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/cbox_option_d_layout_fg_test01"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:background="@drawable/selector_for_cbox"
                            android:button="@null"
                            android:tag="cbox"></CheckBox>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_padding_005"
                            android:text="D：七擒七纵"
                            android:textColor="@color/color_text_content"
                            android:textSize="@dimen/dimen_text_007"></TextView>
                    </LinearLayout>
                </LinearLayout>

                <!--对错结果-->
                <TextView
                    android:id="@+id/tv_content_layout_fg_test"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_padding_006"
                    android:layout_marginLeft="10dp"
                    android:layout_marginEnd="@dimen/dimen_padding_006"
                    android:layout_marginRight="@dimen/dimen_padding_006"
                    android:clickable="true"
                    android:text="1.以下历史事件中，与关羽无关的是（）："
                    android:textColor="@color/color_text_content"
                    android:textSize="@dimen/dimen_text_008" />
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_analysis_layout_fg_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/dimen_padding_005"
                android:text="七擒七纵，七擒孟获，又称南中平定战，是建兴三年蜀汉丞相诸葛亮对南中发动平定南中的战争。当时朱褒、雍闿、高定等人叛变，南中豪强孟获亦有参与，最后诸葛亮亲率大军南下，平定南中。"
                android:textColor="@color/color_text_additional"
                android:textSize="@dimen/dimen_text_007"
                android:visibility="gone" />

            <com.example.attendclassspad01.view.HistogramView
                android:id="@+id/gramv_layout_fg_test"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>